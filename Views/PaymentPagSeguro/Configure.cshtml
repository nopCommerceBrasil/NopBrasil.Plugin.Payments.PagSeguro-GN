@{
    Layout = "";
}
@model ConfigurationModel
@using NopBrasil.Plugin.Payments.PagSeguro.Models;
@using Grand.Web.Framework;

<div style="color:Red;">
    @Html.ValidationSummary(false)
</div>

@using (@Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                <div>
                    <a href="http://www.nopCommercebrasil.com"><img src="/Plugins/Payments.PagSeguro/Content/Images/nopCommerceBrasil.png"></a>
                    <br />
                    <p>
                        Este plugin foi desenvolvido por <a href="http://www.nopCommercebrasil.com">nopCommerce Brasil - http://www.nopCommercebrasil.com</a><br />
                        Em caso de dúvidas ou problemas por favor entre em contato conosco através do email <a href="mailto:nopCommercebrasil@nopCommercebrasil.com" target="_top">nopCommercebrasil@nopCommercebrasil.com</a><br />
                        Este plugin é open-source e seu código-fonte está disponível no <a href="https://github.com/nopCommerceBrasil">GitHub do nopCommerce Brasil</a> no repositório <a href="https://github.com/nopCommerceBrasil/NopBrasil.Plugin.Payments.PagSeguro-GN">NopBrasil.Plugin.Payments.PagSeguro-GN</a>
                    </p>
                    <br />

                </div>
                <div>
                    <p>PagSeguro é uma ferramenta do UOL que disponibiliza mais de 15 formas de pagamento, para mais informações e para criar sua conta acesse: https://pagseguro.uol.com.br </p>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        @Html.GrandLabelFor(model => model.PagSeguroEmail)
                    </div>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.PagSeguroEmail)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        @Html.GrandLabelFor(model => model.PagSeguroToken)
                    </div>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.PagSeguroToken)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        @Html.GrandLabelFor(model => model.PaymentMethodDescription)
                    </div>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.PaymentMethodDescription)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        &nbsp;
                    </div>
                    <div class="col-md-9">
                        <input type="submit" name="save" class="btn bg-blue" value="@T("Admin.Common.Save")" />
                    </div>
                </div>

            </div>
        </div>
    </div>
}


